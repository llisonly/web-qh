@import '../core/var'
@import '../core/mixin'

.c-dropdown
	position relative

.open
	.c-dropdown-menu
		display block	
	
.c-dropdown-toggle
	display block
	padding 0 11px 0 13px
	height 32px
	background #fff
	border 1px solid #ddd
	line-height 32px
	text-align right
	font-size 14px
	color #4e4e4e
	
.c-dropdown-menu
	position absolute
	left 0
	top 34px
	z-index $zindex-dropdown
	max-height 200px
	overflow-x hidden
	overflow-y auto
	background #fff
	border-width 0 1px 1px
	border-style solid
	border-color #ddd
	>li
		display block
		padding 0 10px 0 21px
		height 34px
		line-height 34px
		color #999
		cursor pointer
		&:hover
			background-color #f0f0f0
			.operate-group		
				display block
	.c-dropdown-menu__item-selected
		background-image url('/images/ok.png')
		background-repeat no-repeat
		background-position 4px
			
.c-dropdown-header
	>a		
		color #4e4e4e