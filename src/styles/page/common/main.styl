			height 17px
			background url('../images/nav/member_grey_24×17.png') no-repeat
			imerge nav
		&:hover
			.c-icon
				background url('../images/nav/member_white_24×17.png') no-repeat
				imerge nav

.sidebar-nav__item--memberManage.active
	a
		.c-icon
			background url('../images/nav/member_white_24×17.png') no-repeat
			imerge nav
			
