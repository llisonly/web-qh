			background url('../images/nav/store_grey_22×22.png') no-repeat
			imerge nav
		&:hover
			.c-icon
				background url('../images/nav/store_white_22×22.png') no-repeat
				imerge nav

.sidebar-nav__item--storeManage.active
	a 
		.c-icon
			background url('../images/nav/store_white_22×22.png') no-repeat
			imerge nav

.sidebar-nav__item--memberManage
