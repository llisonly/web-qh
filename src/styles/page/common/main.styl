.toolbar
	position fixed
	right 10px
	bottom 50px
	z-index $zindex-page
	display none
	width 36px
.tool-add,
.tool-goTop	
	display block
	width 36px
	height 36px
.tool-add
	background url('../images/sign_plus_blue.png') no-repeat	
.tool-goTop	
	background url('../images/sign_arrow_up_green.png') no-repeat