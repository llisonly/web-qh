@import '../../core/var'
@import '../../core/mixin'

.mainContent-storeManage--addPresetKey	
	.btn-copy
		margin 24px 0 0 37px
	.form-content
		padding-left 17px
	.form-row
		padding-left 0
		
.presetKey-form
	.control-label
		width auto
	.controls
		float left
		margin-left 14px
		
.keyboard-list
	background #dedede
	border 1px dashed #c8c8c8
	
.keyboard-list__item
	float left
	margin 15px 0 10px 10px
	padding 4px 1px
	width 103px
	height 69px
	background #fff
	border 1px solid #c8c8c8
	.number
		display inline-block
		padding-left 6px
		width 21px
		line-height 34px
		font-size 14px
		color #16a4fa
	.hd,
	.bd
		>.c-input
			padding 0
			width 70px
			border 0
			height 34px
			line-height 34px
			font-size 14px
			color #4e4e4e
	.bd		
		border-top 1px solid #c8c8c8
	&:nth-child(10n+8),
	&:nth-child(10n+9),
	&:nth-child(10n+10)
		.search-programme
			top 78px
			left -193px				

.search-programme
	position absolute
	left 105px
	top 0
	z-index $zindex-dropdown	
	width 299px	
	.mod-search-box
		min-height 100px
		max-height 150px
		overflow-x hidden
		overflow-y auto
	.c-input
		width 213px
	.search-result
		>li
			&:hover
				background #eee
				.operate-group
					display block
			>a
				display block
				padding 0 9px
				height 34px
				line-height 34px
		.current
			background #eee
			.operate-group
				display block
		.num,
		.name
			font-size 14px
			color #4e4e4e
		.name
			margin-left 65px